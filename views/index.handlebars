<div class="container main">
    <div class="burgers">
        <h1 class="mx-auto category">MENU</h1>
    </div>
    <div class="row mx-auto burgerlist">
        <div class="col-6">
            <h1 class="category">Burgers to Eat:</h1>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}} <button class="deleteBtn btn btn-primary" attr={{id}}>Devour</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h1 class="category">Burgers Eaten:</h1>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="burgerlist">
        <div class="row mx-auto" style="width: 200px;">
            <h1 class="category">ADD A BURGER</h1>
        </div>
        <div class="row mx-auto" style="width: 200px;">
            <form class="create-form">
                <div class="form-group">
                    <label for="burger"></label>
                    <input type="text" id="burger" name="name">
                </div>
        </div>
        <div class="row mx-auto" style="width: 120px;">
            <button id="burgerSubmit" class="btn btn-primary" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>