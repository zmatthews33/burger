<div class="container">
    <div class="burgers">
        <h1 class="mx-auto">MENU</h1>
    </div>
    <div class="row mx-auto" style="width: 500px;">
        <div class="col-6">
            <h3>Burgers to Eat:</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}} <button class="deleteBtn btn btn-primary" attr={{id}}>Devour</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h3>Burgers Eaten:</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row mx-auto" style="width: 200px;">
        <h3>ADD A BURGER</h3>
    </div>
    <div class="row mx-auto" style="width: 200px;">
        <form class="create-form">
            <div class="form-group">
                <label for="burger"></label>
                <input type="text" id="burger" name="name">
            </div>
    </div>
    <div class="row mx-auto" style="width: 120px;">
        <button id="burgerSubmit" class="btn btn-primary" type="submit">Add Burger</button>
        </form>
    </div>
</div>